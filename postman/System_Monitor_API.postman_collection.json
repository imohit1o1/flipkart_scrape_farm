    "event": [
        {
            "listen": "prerequest",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "// Wait 1 second between requests for accurate CPU measurement",
                    "if (pm.globals.get('lastCpuCall')) {",
                    "    const lastCall = parseInt(pm.globals.get('lastCpuCall'));",
                    "    const now = Date.now();",
                    "    const timeDiff = now - lastCall;",
                    "    ",
                    "    if (timeDiff < 1000) {",
                    "        const waitTime = 1000 - timeDiff;",
                    "        setTimeout(() => {}, waitTime);",
                    "    }",
                    "}",
                    "pm.globals.set('lastCpuCall', Date.now().toString());"
                ]
            }
        },
        {
            "listen": "test",
            "script": {
                "type": "text/javascript",
                "exec": [
                    "pm.test(\"Status code is 200\", function () {",
                    "    pm.response.to.have.status(200);",
                    "});",
                    "",
                    "pm.test(\"Response has success field\", function () {",
                    "    var jsonData = pm.response.json();",
                    "    pm.expect(jsonData).to.have.property('success');",
                    "    pm.expect(jsonData.success).to.be.true;",
                    "});",
                    "",
                    "pm.test(\"Response has data field\", function () {",
                    "    var jsonData = pm.response.json();",
                    "    pm.expect(jsonData).to.have.property('data');",
                    "});",
                    "",
                    "pm.test(\"Response has timestamp\", function () {",
                    "    var jsonData = pm.response.json();",
                    "    pm.expect(jsonData.data).to.have.property('timestamp');",
                    "});",
                    "",
                    "pm.test(\"CPU usage is valid percentage\", function () {",
                    "    var jsonData = pm.response.json();",
                    "    pm.expect(jsonData.data).to.have.property('cpuUsage');",
                    "    pm.expect(jsonData.data.cpuUsage).to.be.a('number');",
                    "    pm.expect(jsonData.data.cpuUsage).to.be.at.least(0);",
                    "    pm.expect(jsonData.data.cpuUsage).to.be.at.most(100);",
                    "});"
                ]
            }
        }
